{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sfdx": true
  },
  // General Copilot settings
  "github.copilot.enable": {
    "*": true,
    "apex": true,
    "plaintext": true,
    "markdown": true
  },
  "github.copilot.advanced": {
    "indentationMode": {
      "apex": "fourSpaces"
    }
  },
  
  // Editor settings to improve suggestions
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  
  // Apex language specific settings
  "[apex]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [100, 120],
    "editor.wordWrapColumn": 120
  },
  
  // Recommended for Salesforce development
  "salesforcedx-vscode-apex.java.home": "", // Set this to your Java home directory
  "salesforcedx-vscode-apex.enable-semantic-errors": true,
  "salesforcedx-vscode-apex.enable-sobject-refresh-on-startup": true
}
